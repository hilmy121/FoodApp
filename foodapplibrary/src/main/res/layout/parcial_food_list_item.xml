<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_food"
            android:scaleType="fitXY"
            android:layout_width="76dp"
            android:layout_height="76dp"
            app:riv_corner_radius="@dimen/fal_default_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/fal_image_placeholder_drink"
    />

    <TextView
            android:id="@+id/text_food_title"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/falColorPrimaryContent"
            tools:text="Vegan Food Swaps"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_food"
            android:layout_marginStart="@dimen/fal_horizontal_margin"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            style="@style/FoodApp_CategoryLabel"
            android:id="@+id/text_food_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Fast Food"
            app:layout_constraintTop_toBottomOf="@+id/text_food_title"
            app:layout_constraintBottom_toTopOf="@+id/ll_food_controls"
            app:layout_constraintStart_toEndOf="@+id/image_food"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/fal_horizontal_margin"/>

    <LinearLayout
            android:id="@+id/ll_food_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            app:layout_constraintTop_toBottomOf="@+id/text_food_category"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_food"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="@dimen/fal_horizontal_margin">
        <TextView
                style="@style/FoodApp_PriceText"
                android:id="@+id/text_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="â‚¹ 200"
                android:layout_gravity="center_vertical"
        />
        <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:background="@drawable/fal_bullet_bg"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
        />
        <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                app:srcCompat="@drawable/fal_ic_rating_star"
                android:tint="@color/falColorStar"
                android:layout_gravity="center_vertical"
        />
        <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/text_food_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="sans-serif-light"
                tools:text="4.1 Ratings"
                android:textColor="@color/falColorPriceText"
                android:layout_gravity="center_vertical"
        />
        <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:background="@drawable/fal_bullet_bg"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
        />
        <com.onappfeedback.foodapplibrary.FavoriteToggleButton
                android:id="@+id/button_food_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/falColorHeart"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
